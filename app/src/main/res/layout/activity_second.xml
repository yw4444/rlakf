<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pop2.SecondActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="410dp"
        android:layout_height="974dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 ImageView (bu1) -->
            <ImageView
                android:id="@+id/bu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bu1"
                android:layout_marginTop="5dp" />  <!-- 마진 추가 -->

            <!-- 두 번째 ImageView (bu1_2) -->
            <ImageView
                android:id="@+id/bu1_2"
                android:layout_width="wrap_content"
                android:layout_height="424dp"
                android:src="@drawable/bu1_2"
                android:layout_marginTop="5dp" />  <!-- 마진 추가 -->

            <!-- 세 번째 ImageView (bu1_1) -->
            <ImageView
                android:id="@+id/bu1_1"
                android:layout_width="wrap_content"
                android:layout_height="424dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bu1_1" />  <!-- 마진 추가 -->

            <ImageView
                android:id="@+id/bu1_3"
                android:layout_width="wrap_content"
                android:layout_height="424dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bu1_3" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
